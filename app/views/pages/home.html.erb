
<div class="banner d-flex align-items-center" style="background-image: url(https://images.unsplash.com/photo-1457282168619-2383c79b278d?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1508&q=80);">
  <div class="container">
    <h1><strong>Add some green to your space</strong></h1>
    <h5>Search something you will love</h5>
    <div class="btn-padding">
      <%= link_to "Explore our plants", plants_path, class:"btn-main" %>
    </div>

    <div class="search-container">
      <div class="btn-padding">
        <div class="search-bar"><%= form_tag plants_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find your plant" %>
          <%# <div class="btn-padding"> %>
            <%= button_tag(type: "submit", class: "btn-main btn-search") do %>
                <i class="fas fa-search"></i>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>

  

</div>

<div class= "container">


  <h3 class="my-3"> Top plants </h3>

   <div class="row">
      <% @plants.each do |plant| %>
        <div class="col-4">
          <%= link_to plant_path(plant), class: "plant-card-link" do %>
            <div class="card-plant mb-3">
              <% if plant.photo.attached? %>
                <%= cl_image_tag plant.photo.key, crop: :fit %>
              <% else %>
                <%= cl_image_tag("placeholder-plant", crop: :fit) %>
              <% end %>
              <div class="card-plant-infos">
                <div>
                  <h2><%= plant.name.capitalize %></h2>
                </div>
                <h2 class="card-plant-pricing"><%= number_to_currency(plant.price, precision: 0) %></h2>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>

</div>
